{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "types": ["node"],
        "outDir": "./dist",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module":"commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules"
    ]
  }